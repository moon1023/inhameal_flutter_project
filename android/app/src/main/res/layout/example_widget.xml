<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Android.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="cafename" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="중식" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=" ~ 13:00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lunchMenus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lunchMenu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사골우거지국" />

                    <TextView
                        android:id="@+id/lunchMenu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고등어카레튀김" />

                    <TextView
                        android:id="@+id/lunchMenu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마파두부" />

                    <TextView
                        android:id="@+id/lunchMenu4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="물다시마채무침" />

                    <TextView
                        android:id="@+id/lunchMenu5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김치볶음밥" />

                    <TextView
                        android:id="@+id/lunchMenu6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김치볶음밥" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="석식" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=" ~ 19:00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dinnerMenu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사골우거지국" />

                    <TextView
                        android:id="@+id/dinnerMenu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고등어카레튀김" />

                    <TextView
                        android:id="@+id/dinnerMenu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마파두부" />

                    <TextView
                        android:id="@+id/dinnerMenu4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="물다시마채무침" />

                    <TextView
                        android:id="@+id/dinnerMenu5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김치볶음밥" />

                    <TextView
                        android:id="@+id/dinnerMenu6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김치볶음밥" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>